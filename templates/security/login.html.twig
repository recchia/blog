{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12">
        <div class="card border-none">
            <div class="card-block">
                {% if error %}
                    <br>
                    <div  class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <p class="mt-4 text-white lead text-center">
                    Sign in to access your Authority account
                </p>
                <div class="mt-4">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_widget(form._username, {'attr': {'class': 'form-control', 'placeholder': 'Enter username'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form._password, {'attr': {'class': 'form-control', 'placeholder': 'Enter password'}}) }}
                    </div>
                    <label class="custom-control custom-checkbox mt-2">
                        <input type="checkbox" class="custom-control-input">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description text-white">Keep me logged in</span>
                    </label>
                    <button type="submit" class="btn btn-primary float-right">Sign in</button>
                    {{ form_end(form) }}
                    <div class="clearfix"></div>
                    <p class="content-divider center mt-4"></p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
